<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sdk.dyq.widgetmodule.MainActivity">
    <com.sdk.dyq.widgetlibrary.swiperefresh.SwipeLoadLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/element_padding"
            android:paddingRight="@dimen/element_padding"
            android:paddingTop="@dimen/element_padding"/>

        <include
            android:id="@+id/swipe_load_more_footer"
            layout="@layout/layout_footer"/>

    </com.sdk.dyq.widgetlibrary.swiperefresh.SwipeLoadLayout>

</LinearLayout>
